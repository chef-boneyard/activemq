description "ActiveMQ <%= @instance -%> startup script"

  start on runlevel [2345]
  stop on runlevel [016]

  setuid activemq_<%= @instance %>
  setgid activemq_<%= @instance %>

  exec  <%= @install_path %>/bin/activemq start

  expect daemon

  post-start script
      sudo initctl emit inn-activemq-start
  end script

  post-stop script
      sudo initctl emit inn-activemq-stop
  end script